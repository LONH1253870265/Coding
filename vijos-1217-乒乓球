#include<iostream>
#include<vector>			
using namespace std;
short d(short &a,short &b)		
{
	return a>=b?a-b:b-a;
}
void statis(short n,vector<char> &p)
{
	short w_11=0,l_11=0;
	vector<char>::iterator it;
	it=p.begin();
	while(*it!='E')
	{
		if(*it=='W')
			w_11++;
		if(*it=='L')
			l_11++; 
		if((w_11>=n||l_11>=n)&&d(w_11,l_11)>=2)
		{
			cout<<w_11<<":"<<l_11<<endl;
			w_11=l_11=0;
		}	
		it++;
	}
	cout<<w_11<<":"<<l_11<<endl;
}

int main()
{
	vector<char>ss;
	char ch;
	do
	{
		ss.push_back((ch=getchar(),ch));		
	}while(ch!='E');
	statis(11,ss);
	cout<<endl;
	statis(21,ss);
	return 0;
}
